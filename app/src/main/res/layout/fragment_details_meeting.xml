<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meetingDetails_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsMeetingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">


            <Button
                android:id="@+id/details_meeeting_fragment_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/design_default_color_primary"
                android:paddingStart="8dp"
                android:paddingTop="0dp"
                android:paddingEnd="8dp"
                android:paddingBottom="0dp"
                android:text="@string/save_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Spinner
                android:id="@+id/details_meeting_fragment_spinner"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:prompt="@string/meeting_room"
                app:backgroundTint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.272"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_meeting_fragment_select" />

            <TextView
                android:id="@+id/details_meeting_fragment_date_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/date"
                android:textAlignment="center"
                android:textSize="@dimen/normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meetingName_TextInputLayout" />

            <TextView
                android:id="@+id/details_meeting_fragment_start_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/begin_hour_2points"
                android:textSize="@dimen/normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_meeting_fragment_date_textView" />

            <TextView
                android:id="@+id/details_meeting_fragment_end_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/finish_hour_2points"
                android:textSize="@dimen/normal"
                app:layout_constraintEnd_toEndOf="@+id/details_meeting_fragment_start_hour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_meeting_fragment_start_hour" />

            <Button
                android:id="@+id/details_meeting_fragment_start_hour_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/begin_hour"
                android:imeOptions="actionDone"
                android:inputType="time"
                app:maxLines="1"
                android:textSize="@dimen/normal"
                app:layout_constraintBottom_toBottomOf="@+id/details_meeting_fragment_start_hour"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/details_meeting_fragment_start_hour"
                app:layout_constraintTop_toTopOf="@+id/details_meeting_fragment_start_hour" />

            <Button
                android:id="@+id/details_meeting_fragment_end_hour_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/finish_hour"
                android:imeOptions="actionDone"
                android:inputType="time"
                app:maxLines="1"
                android:textSize="@dimen/normal"
                app:layout_constraintBottom_toBottomOf="@+id/details_meeting_fragment_end_hour"
                app:layout_constraintStart_toStartOf="@+id/details_meeting_fragment_start_hour_button"
                app:layout_constraintTop_toTopOf="@+id/details_meeting_fragment_end_hour" />

            <Button
                android:id="@+id/details_meeting_fragment_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:ems="10"
                android:hint="@string/meeting_date"
                android:imeOptions="actionDone"
                android:inputType="date"
                android:textSize="@dimen/normal"
                app:layout_constraintBottom_toBottomOf="@+id/details_meeting_fragment_date_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/details_meeting_fragment_date_textView"
                app:layout_constraintTop_toTopOf="@+id/details_meeting_fragment_date_textView"
                app:layout_constraintVertical_bias="0.571" />

            <TextView
                android:id="@+id/details_meeting_fragment_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/meeting_room"
                android:textSize="@dimen/normal"
                app:layout_constraintStart_toStartOf="@+id/details_meeting_fragment_end_hour"
                app:layout_constraintTop_toBottomOf="@+id/details_meeting_fragment_end_hour" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_meeting_fragment_email_input" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/divider">

            </com.google.android.material.chip.ChipGroup>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/meetingName_TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:inputType="text"
                app:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/details_meeting_fragment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textSize="@dimen/normal"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/details_meeting_fragment_email_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="@string/participants"
                android:minWidth="32dp"
                app:layout_constraintEnd_toStartOf="@+id/addParticipant_button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/details_meeting_fragment_select"
                app:layout_constraintTop_toBottomOf="@+id/details_meeting_fragment_spinner">

                <AutoCompleteTextView
                    android:id="@+id/participant_autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    app:maxLines="1"
                    android:textSize="@dimen/normal"
                    tools:ignore="LabelFor"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="369dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/addParticipant_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/design_default_color_primary"
                android:paddingStart="8dp"
                android:paddingTop="0dp"
                android:paddingEnd="8dp"
                android:paddingBottom="0dp"
                android:text="@string/add_participant"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/details_meeting_fragment_email_input" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>